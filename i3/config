exec_always --no-startup-id autoxrandr
# enable natural scrolling
# exec synclient VertScrollDelta=-68
exec xinput --set-prop 'DLL07A0:01 044E:120B' "libinput Natural Scrolling Enabled" 1

#folating pop_ups
